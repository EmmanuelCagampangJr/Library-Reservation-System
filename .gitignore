    # Global ignores for the entire project

    # Node.js/Frontend ignores
    /node_modules/
    /dist/               # For frontend build output (Vite default is often 'dist')
    .env                 # Environment variables file

    # Java/Maven/Backend ignores
    /backend/target/     # Maven build output for the backend
    .classpath           # Eclipse project files
    .project             # Eclipse project files
    .settings/           # Eclipse project settings
    *.iml                # IntelliJ IDEA project files
    *.ipr                # IntelliJ IDEA project files
    *.iws                # IntelliJ IDEA workspace files

    # Logs
    *.log
    logs/
    npm-debug.log*
    yarn-debug.log*

    # IDE and OS specific files
    .idea/               # IntelliJ IDEA specific files
    .vscode/             # VS Code specific files (consider adding `!.vscode/extensions.json` if you want to track recommended extensions)
    .DS_Store            # macOS files
    Thumbs.db            # Windows files
    